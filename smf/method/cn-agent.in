# SMF Startup script for cn-agent

set -o xtrace

. /lib/svc/share/smf_include.sh
. /lib/sdc/config.sh

# Update logadm configuration for cn-agent
mkdir -p /var/log/cn-agent/logs/
touch /var/log/cn-agent/cn-agent.log
logadm -w cn-agent_task_logs /var/log/cn-agent/cn-agent.log -b '/usr/vm/sbin/rotate-logs.sh -m /var/log/cn-agent/logs/ /var/log/cn-agent/cn-agent/var/log/cn-agent/cn-agent_tasks_$nodename_%FT%H:%M:%S.log' -C 168 -S 1g -p 1h
logadm -w cn-agent_logs -C 168 -S 1g -c -p 1h -t '/var/log/cn-agent/cn-agent_$nodename_%FT%H:%M:%S.log' var/svc/log/*cn-agent*.log

case "$1" in
'start')
    /usr/bin/ctrun -l child -o noorphan /usr/node/bin/node --abort_on_uncaught_exception @@ROOT@@/bin/cn-agent.js &
    ;;

'stop')
    ;;

*)
    echo "Usage: $0 { start | stop }"
    exit $SMF_EXIT_ERR_FATAL
    ;;
esac
exit $SMF_EXIT_OK
